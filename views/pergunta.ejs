<%- include ("./partials/header.ejs") %>

<body>
  <%- include ("./partials/navbar.ejs") %>

  <div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form action="/responder" method="POST">
      <label>Resposta:</label>
      <textarea name="corpo" placeholder="Digite sua resposta!" class="form-control"></textarea><br>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button type="submit" class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>

    <!-- respostas vem do index.js linha 76 -->
    <% respostas.forEach(resposta => {%>
      <br>
      <div class="card">
        <div class="card-body">
          <p><%= resposta.corpo %></p>
        </div>
      </div>
    <% }) %>

  </div>
</body>

<!-- Incluir Partials Footer -->
<%- include ("./partials/footer.ejs") %>